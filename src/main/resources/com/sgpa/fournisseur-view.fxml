<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sgpa.controller.FournisseurController"
      spacing="16">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <!-- ============ HEADER ============ -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Fournisseurs" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="ðŸ”„ Actualiser" onAction="#handleActualiser" styleClass="button"/>
    </HBox>

    <!-- ============ TABLEAU ============ -->
    <TableView fx:id="tableFournisseurs" VBox.vgrow="ALWAYS" styleClass="table-view">
        <placeholder><Label text="Aucun fournisseur enregistrÃ©."/></placeholder>
        <columns>
            <TableColumn fx:id="colId"      text="ID"      prefWidth="60"  minWidth="50"/>
            <TableColumn fx:id="colNom"     text="Nom"     prefWidth="220" minWidth="140"/>
            <TableColumn fx:id="colContact" text="Contact" prefWidth="220" minWidth="140"/>
            <TableColumn fx:id="colAdresse" text="Adresse" prefWidth="400" minWidth="200"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>

    <!-- ============ FORMULAIRE CRUD ============ -->
    <VBox spacing="15" styleClass="details-panel">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Ajouter / Modifier un fournisseur" styleClass="label-bold"/>

        <GridPane hgap="15" vgap="12">
            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints minWidth="100" prefWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Ligne 1 : Nom | Contact -->
            <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtNom"
                       promptText="Nom du fournisseur *"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Contact :" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="txtContact"
                       promptText="TÃ©lÃ©phone ou e-mail *"
                       GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <!-- Ligne 2 : Adresse (sur toute la largeur) -->
            <Label text="Adresse :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtAdresse"
                       promptText="Adresse complÃ¨te"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
