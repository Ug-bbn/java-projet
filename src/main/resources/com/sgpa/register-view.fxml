<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sgpa.controller.RegisterController"
      alignment="CENTER" spacing="20"
      styleClass="login-background">

    <padding>
        <Insets top="30" right="50" bottom="30" left="50"/>
    </padding>

    <!-- Carte d'inscription -->
    <VBox alignment="CENTER" spacing="15" maxWidth="400" styleClass="login-card">

        <!-- Titre -->
        <Label text="Créer un compte" styleClass="form-title"/>

        <!-- Formulaire -->
        <VBox spacing="12" alignment="CENTER">
            <VBox spacing="5">
                <Label text="Nom d'utilisateur *" styleClass="form-label"/>
                <TextField fx:id="txtUsername" promptText="Minimum 3 caractères" prefWidth="350"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Nom *" styleClass="form-label"/>
                <TextField fx:id="txtNom" promptText="Votre nom" prefWidth="350"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Prénom *" styleClass="form-label"/>
                <TextField fx:id="txtPrenom" promptText="Votre prénom" prefWidth="350"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Mot de passe *" styleClass="form-label"/>
                <PasswordField fx:id="txtPassword" promptText="Minimum 4 caractères" prefWidth="350"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Confirmer le mot de passe *" styleClass="form-label"/>
                <PasswordField fx:id="txtPasswordConfirm" promptText="Retapez votre mot de passe" prefWidth="350"/>
            </VBox>

            <!-- Messages -->
            <Label fx:id="lblError" text="" visible="false" managed="false" styleClass="error-label"/>
            <Label fx:id="lblSuccess" text="" visible="false" managed="false" styleClass="success-label"/>

            <!-- Boutons -->
            <Button text="Créer le compte" onAction="#handleRegister" prefWidth="350" styleClass="register-button"/>

            <Button text="← Retour à la connexion" onAction="#handleRetourLogin" prefWidth="350" styleClass="back-button"/>
        </VBox>
    </VBox>
</VBox>
