<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sgpa.controller.LoginController"
      alignment="CENTER" spacing="20"
      styleClass="login-background"
      stylesheets="@style-light.css">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Carte de connexion -->
    <VBox alignment="CENTER" spacing="20" maxWidth="350" styleClass="login-card">

        <!-- Logo/Titre -->
        <VBox alignment="CENTER" spacing="5">
            <StackPane maxWidth="60" maxHeight="60" minWidth="60" minHeight="60"
                       style="-fx-background-color: #2563eb; -fx-background-radius: 14;">
                <SVGPath content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 14h-2v-4H6v-2h4V7h2v4h4v2h-4v4z"
                         style="-fx-fill: white;" scaleX="2.0" scaleY="2.0"/>
            </StackPane>
            <Label text="SGPA" styleClass="login-title"/>
            <Label text="SystÃ¨me de Gestion de Pharmacie" styleClass="login-subtitle"/>
        </VBox>

        <Separator prefWidth="300"/>

        <!-- Formulaire -->
        <VBox spacing="15" alignment="CENTER">
            <Label text="Connexion" styleClass="form-title"/>

            <VBox spacing="5">
                <Label text="Nom d'utilisateur" styleClass="form-label"/>
                <TextField fx:id="txtUsername" promptText="Entrez votre username" prefWidth="300"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Mot de passe" styleClass="form-label"/>
                <PasswordField fx:id="txtPassword" promptText="Entrez votre mot de passe" prefWidth="300"/>
            </VBox>

            <!-- Message d'erreur -->
            <Label fx:id="lblError" text="" visible="false" styleClass="error-label"/>

            <!-- Boutons -->
            <Button text="Se connecter" onAction="#handleLogin" prefWidth="300" styleClass="login-button"/>
        </VBox>
    </VBox>
</VBox>
