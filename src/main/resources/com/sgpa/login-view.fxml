<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sgpa.controller.LoginController"
      alignment="CENTER" spacing="20"
      styleClass="login-background">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Carte de connexion -->
    <VBox alignment="CENTER" spacing="20" maxWidth="350" styleClass="login-card">

        <!-- Logo/Titre -->
        <VBox alignment="CENTER" spacing="8">
            <StackPane maxWidth="80" maxHeight="80" minWidth="80" minHeight="80"
                       styleClass="logo-icon-large">
                <StackPane maxWidth="64" maxHeight="64" minWidth="64" minHeight="64"
                           styleClass="logo-icon-inner">
                    <SVGPath content="M9.5 2C8.67 2 8 2.67 8 3.5V8H3.5C2.67 8 2 8.67 2 9.5v5c0 .83.67 1.5 1.5 1.5H8v4.5c0 .83.67 1.5 1.5 1.5h5c.83 0 1.5-.67 1.5-1.5V16h4.5c.83 0 1.5-.67 1.5-1.5v-5c0-.83-.67-1.5-1.5-1.5H16V3.5c0-.83-.67-1.5-1.5-1.5h-5z"
                             styleClass="logo-svg" scaleX="2.2" scaleY="2.2"/>
                </StackPane>
            </StackPane>
            <Label text="SGPA" styleClass="login-title"/>
            <Label text="SystÃ¨me de Gestion de Pharmacie" styleClass="login-subtitle"/>
        </VBox>

        <Separator prefWidth="300"/>

        <!-- Formulaire -->
        <VBox spacing="15" alignment="CENTER">
            <Label text="Connexion" styleClass="form-title"/>

            <VBox spacing="5">
                <Label text="Nom d'utilisateur" styleClass="form-label"/>
                <TextField fx:id="txtUsername" promptText="Entrez votre username" prefWidth="300"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Mot de passe" styleClass="form-label"/>
                <PasswordField fx:id="txtPassword" promptText="Entrez votre mot de passe" prefWidth="300"/>
            </VBox>

            <!-- Message d'erreur -->
            <Label fx:id="lblError" text="" visible="false" managed="false" styleClass="error-label"/>

            <!-- Boutons -->
            <Button text="Se connecter" onAction="#handleLogin" prefWidth="300" styleClass="login-button"/>
        </VBox>
    </VBox>
</VBox>
